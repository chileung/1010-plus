#p-main
  .header
    padding-top 10%
    .c-crown
      margin 0 auto
      display block
  .controller
    font-size 0
    text-align center
    margin-top 20%
    .start
    .achievement
    .rank
      margin 0 5px
      width 60px
      height 60px
      background-color gray //temp
  .footer
    position absolute
    width 100%
    bottom 0
    margin-bottom 10%
    .logo
      display block
      margin 0 auto
      width 50px
      height 50px
    .btn
      position absolute
      right 0
      top 0
      margin-right 20px
  .setting-area
    background-color blue //temp
    position absolute
    height 50%
    width 100%
    top 100%
    transition top .15s
    transition-timing-function ease-out
    -webkit-transition top .15s
    -webkit-transition-timing-function ease-out
    .setting-container
      padding 5% 10%
      text-align center
      font-size 0
      background-color gray // temp
      >div
        background-color green
        display inline-block
        padding 0 5px
      .btn
        width 70px // temp
        height 70px // temp
        display block
        background-color yellow // temp
        margin-bottom 5px
    .back.btn
      position absolute
      right 0
      bottom 0
      margin 0 15px 15px 0
      width 50px // temp
      height 50px // temp
      background-color red // temp
  .setting-area.scrollUp
    top 50%

.highest-score
  text-align center
  margin-top 10px